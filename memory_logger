# Description:
# Ensures a â€œMemoryâ€ directory exists in the current working directory,then appends the systemâ€™s memory usage to a log file.

# Usage: ./test.sh

echo -e "\nâœ¨  Test Script: Memory Logger âœ¨\n"
echo "----------------------------------"
echo

# --- Setup variables ---
BASE_DIR="$PWD"
MEMORY_DIR="$BASE_DIR/Memory"
MEMORY_LOG="$MEMORY_DIR/memory.log"

# --- Check for Memory directory ---
if [[ -d "$MEMORY_DIR" ]]; then
    echo "ðŸ“‚  Memory directory exists at: $MEMORY_DIR"
    echo "ðŸ“  Will append memory stats to:      $MEMORY_LOG"
else
    mkdir -p "$MEMORY_DIR"
    echo "ðŸ“‚ $MEMORY_DIR did not exist and now has been created:      $MEMORY_DIR"
    echo "ðŸ“  Will append memory stats to:      $MEMORY_LOG"
fi

echo

# --- Log memory usage ---
echo "ðŸ”„  Logging memory usage..."
free >> "$MEMORY_LOG"
echo "âœ…  Memory stats logged to:           $MEMORY_LOG"

echo
exit 0
